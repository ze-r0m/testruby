<h1 class="mb-4">Пользователи</h1>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
  <tr>
    <th>Имя</th>
    <th>Email</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td>
        <%= link_to "Показать", user_path(user), class: "btn btn-info btn-sm" %>
        <%= link_to "Редактировать", edit_user_path(user), class: "btn btn-warning btn-sm" %>
        <%= link_to "Удалить", user_path(user), method: :delete, data: { confirm: "Вы уверены?" }, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "Добавить пользователя", new_user_path, class: "btn btn-success" %>
