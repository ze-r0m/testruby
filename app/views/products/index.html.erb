<h1 class="mb-4">Товары</h1>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
  <tr>
    <th>Название</th>
    <th>Стоимость</th>
    <th>Категория</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <th><%= product.category&.name || "Нет категории" %></th>
      <td>
        <%= link_to "Показать", product_path(product), class: "btn btn-info btn-sm" %>
        <%= link_to "Редактировать", edit_product_path(product), class: "btn btn-warning btn-sm" %>
        <%= link_to "Удалить", product_path(product), method: :delete, data: { confirm: "Вы уверены?" }, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


<%= link_to "Добавить товар", new_product_path, class: "btn btn-success"  %>
